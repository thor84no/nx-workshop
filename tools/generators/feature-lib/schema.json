{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "feature-lib",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Library name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "directory": {
      "type": "string",
      "enum": [
        "store",
        "api",
        "shared"
      ],
      "description": "Library directory",
      "x-prompt": {
        "message": "Which type of library would you like to generate?",
        "type": "list",
        "items": [
          {
            "value": "api",
            "label": "API"
          },
          {
            "value": "store",
            "label": "Store"
          },
          {
            "value": "shared",
            "label": "Shared"
          }
        ]
      }
    }
  },
  "required": ["name"]
}
